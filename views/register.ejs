<link rel="stylesheet" href="/css/login.css" />

<div class="login-container" id="login-container">
  <div class="form-container sign-up-container">
    <!-- Sign Up form code goes here -->
    <form action="/users/register" method="POST" enctype="multipart/form-data">
      <h1>Create Account</h1>
      <span>Please fill in all fields</span>
      <input type="text" placeholder="Company Name" id="name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>"/>
      <input type="email" placeholder="Email" id="uemail" name="uemail" value="<%= typeof uemail != 'undefined' ? uemail : '' %>"/>
      <input type="password" placeholder="Password" id="upassword" name="upassword" autocomplete="false"/>
      <input type="password" placeholder="Confirm Password" id="cpassword" name="cpassword" autocomplete="false"/>
      <span>Select profile image</span>
      <input type="file" name="avatar">
      <button type="submit">Sign Up</button>
    </form>
  </div>
  <div class="form-container sign-in-container">
    <!-- Sign In form code goes here -->
    <form action="/users/auth" method="POST">
      <h1>Sign in</h1>
      <span>Please fill in all fields</span>
      <input type="email" placeholder="Email" id="email" name="email" value="<%= typeof email != 'undefined' ? uemail : '' %>" />
      <input type="password" placeholder="Password" id="password" name="password" autocomplete="false"/>
      <a href="#">Forgot your password?</a>
      <button type="submit">Sign In</button>
    </form>
  </div>
  <div class="overlay-container">
    <!-- The overlay code goes here -->
    <div class="overlay">
      <div class="overlay-panel overlay-left">
        <h1>Welcome Back!</h1>
        <p>
          To keep connected with us please login with your personal info
        </p>
        <button class="ghost" id="signIn">Sign In</button>
      </div>
      <div class="overlay-panel overlay-right">
        <h1>Hello There!</h1>
        <p>Enter your personal details and start journey with us</p>
        <button class="ghost" id="signUp">Sign Up</button>
      </div>
    </div>
  </div>
</div>
