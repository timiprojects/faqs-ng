<div class="classic">
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-5 m-auto">
        <div class="card card-body">
          <h2 class="text-center mb-3">Register</h2>
          <% include ./partials/message %>
          <form action="/users/register" method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>" />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>" />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
                value="<%= typeof email != 'undefined' ? password : '' %>" />
            </div>
            <div class="form-group">
              <label for="password2">Confirm Password</label>
              <input type="password" id="cpassword" name="cpassword" class="form-control" placeholder="Confirm Password"
                value="<%= typeof email != 'undefined' ? cpassword : '' %>" />
            </div>
            <button type="submit" class="btn btn-info btn-block">Register</button>
          </form>
          <small class="text-center mt-4">Already got an account? <a href="/users/login" class="text-danger">Sign In</a></small>
        </div>
      </div>
    </div>
  </div>
</div>