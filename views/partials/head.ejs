<header style="z-index: 3;">
    <div class="faqs-header-container py-2">
        <nav class="faqs-header-navbar">
            <a class="nav-link faqs-link" href="/v2/project">
                <i class="fas fa-folder faqs-subheader-icons"></i>
                <span>My Projects</span>
            </a>
            <h5 class="text-center"><%= project.title %></h5>
            <ul class="navbar faqs-header-navbar-item-right">
                <li class="nav faqs-header-nav-item dropdown">
                    <a class=" nav-link faqs-avatar" data-toggle="dropdown" href="#" role="button" aria-haspopup="true"
                        aria-expanded="false">
                        <div class="avatar">
                            <img src="/v2/photo" class="faqs-avatar-item" alt="" />
                        </div>
                        <!-- <img src="https://i.pravatar.cc/100?img=3" class="faqs-avatar-item" alt=""> -->
